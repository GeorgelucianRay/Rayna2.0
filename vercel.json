{
  "headers": [
    {
      "source": "/models/(.*)\\.glb",
      "headers": [
        { "key": "Content-Type", "value": "model/gltf-binary" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/draco/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/models/(.*)\\.glb", "destination": "/models/$1.glb" },   // NO-OP: scurtcircuitează catch-all
    { "source": "/draco/(.*)",        "destination": "/draco/$1" },        // NO-OP pentru fișierele decoder
    { "source": "/(.*)",              "destination": "/index.html" }       // app-shell pentru restul
  ],
  "cleanUrls": true,
  "trailingSlash": false
}